<div class="uk-grid uk-grid-collapse" ng-controller="settingsCtrl">
    <div class="uk-width-3-10 message-list">
        <div class="page-title noshadow nopadding-right" style="padding-left: 20px;">
            <div class="page-title-border-right">
                <p>{{ t 'settings.edit-acategory' }}</p>
            </div>
        </div>

        <div class="page-content-left full-height">
            <div class="tag-info-wrap uk-clearfix" style="padding: 15px 0 0 15px;">
                <h4>{{ t 'settings.article-category' }}</h4>
                <div class="uk-width-1-1 padding-right-15">
                    <div class="tru-card" style="background: #fff;min-height: 150px; margin: 0; padding: 15px;">
                        <div class="scrollable">
                            <div class="uk-margin-small-top uk-margin-medium-bottom">
                                <label for="editCategory_Name">{{ t 'settings.category-name' }}</label>
                                <input id="editCategory_Name" name="editCategory_Name" type="text" class="md-input" value="{{data.category.name}}" />
                            </div>

                            <button type="button" class="md-btn md-btn-block md-btn-wave-light md-btn-success" ng-click="updateArticleCategory('{{data.category._id}}')">{{ t 'share.update' }}</button>
                            <hr />
                            <button type="button" class="md-btn md-btn-block md-btn-wave-light md-btn-danger uk-margin-medium-bottom" ng-click="showDeleteArticleCategory('{{data.category._id}}', {{data.hasArticles}})">{{ t 'shared.delete' }}</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="uk-width-7-10 nopadding page-message">
        <div class="page-title-right page-title nopadding noshadow">
            <p style="padding-left: 20px; font-size: 24px;">{{ t 'tickets.title' }}</p>
        </div>

        <div class="page-content page-content-right full-height scrollable">
            <div class="uk-grid uk-margin-medium-bottom">
                <div class="uk-width-1-1">
                    <div class="uk-grid" data-uk-grid-margin>
                        <div class="uk-width-medium-1-1">
                            <div id="overdue_tickets" class="tru-card noshadow" style="min-height: 245px;">
                                <div class="tru-card-content">
                                    <div class="uk-overflow-container">
                                        <table class="uk-table">
                                            <thead>
                                            <tr>
                                                <th class="uk-text-nowrap">{{ t 'articles.article-num' }}</th>
                                                <th class="uk-text-nowrap">{{ t 'articles.status' }}</th>
                                                <th class="uk-text-nowrap">{{ t 'articles.subject' }}</th>
                                                <th class="uk-text-nowrap uk-text-right">{{ t 'articles.created-date' }}</th>
                                            </tr>
                                            </thead>
                                            <tbody>

                                            {{#each data.articles}}
                                                <tr class="uk-table-middle">
                                                    <td class="uk-width-1-10 uk-text-nowrap"><a href="/articles/{{uid}}">A#{{uid}}</a></td>
                                                    <td class="uk-width-1-10 uk-text-nowrap">
                                                        <span class="uk-badge article-status-{{status}} uk-width-1-1">{{status}}</span></td>
                                                    <td class="uk-width-6-10">
                                                        {{subject}}
                                                    </td>
                                                    <td class="uk-width-2-10 uk-text-right uk-text-muted uk-text-small">
                                                        {{{formatDate date "MM.DD.YYYY"}}}
                                                    </td>
                                                </tr>
                                            {{/each}}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
    </div>

</div>

{{> deleteArticleCategoryWindow}}

