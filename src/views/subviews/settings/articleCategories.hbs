<div class="small-12 large-10 columns nopadding aCategoriesContent" ng-controller="settingsCtrl">
    <div class="page-title noshadow" style="padding-left: 25px;">
        <p class="left">{{ t 'settings.title-article-category' }}</p>
        <div class="uk-float-right">
            <a href="#" class="no-ajaxy md-btn md-btn-success" style="margin-top: 15px;" ng-click="showCreateArticleCategoryWindow($event)">{{ t 'shared.create' }}</a>
        </div>
    </div>

    <div class="full-height page-content no-border-top" style="position: relative;">
        <div class="articleCategoryList full-height">
            <table id="articleCategoriesTable" class="pDataTable stripe">
                <thead>
                <tr>
                    <th></th>
                    <th>{{ t 'settings.article-category' }}</th>
                    <!--<th style="text-align: right; padding-right: 25px;">Ticket Count</th>-->
                </tr>
                </thead>
                <tbody>
                {{#each data.categories}}
                    <tr ng-click="editArticleCategory($event)" data-articlecategoryid="{{_id}}">
                        <td>
                            <!--<input id="c_{{_id}}" type="checkbox" class="poloCheckbox"/>-->
                            <!--<label for="c_{{_id}}"></label>-->
                        </td>
                        <td>{{name}}</td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>

    {{> createArticleCategoryWindow}}
</div>

{{#contentFor 'js-plugins'}}

{{/contentFor}}